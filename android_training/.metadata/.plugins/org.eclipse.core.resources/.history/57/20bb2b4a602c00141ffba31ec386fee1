package com.test.Thread;

public class ThreadA {

    public static void main(String[] args) {
        Thread thread = new ThreadB();
        thread.start();

        synchronized (thread) {

            try {

                System.out.println("等待对象thread完成计算。。。");

                thread.wait();
            } catch (InterruptedException e) {
                e.printStackTrace();
            }

        }
    }
}
